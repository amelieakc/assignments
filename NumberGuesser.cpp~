#include <iostream>
#include <algorithm>
#include "NumberGuesser.h"
using namespace std;

int NumberGuesser::guesser(int imin, int imax)
{
  int imid = (imin + imax) / 2;
   return imid;
}

void NumberGuesser::higher()
{
  int imid;
  int imin = imid +1;
};

void NumberGuesser::lower()
{
  int imid; 
  int imax = imid -1;
};

int NumberGuesser::getCurrentGuess(int arr[], int find, int imin, int imax)
{
  int imid = (imin + imax) / 2;
  
  if(arr[imid] > find)
    return binary_search(arr, find, imin, imid-1);
  else if (arr[imid] < find)
    return binary_search(arr, find, imid+1, imax);
  else
    return imid;
};

void NumberGuesser::reset()
{
  int imin = 0;
  int imax = 100;
};
