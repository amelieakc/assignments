#include <iostream>
#include <cstdlib>
using namespace std;

void selectionSort(int arr[], int n)
{
  int i, j, min, temp;
  int count = 0;
  for(i = 0; i < n; i++)
    {
      min = i;
      for(j = i+1; j < n; j++) 
	{
	  if(arr[j] < arr[min])
	    min = j;
	  count++;
	}
      if(min != i)
	{
	  temp = arr[i];
	  arr[i] = arr[min];
	  arr[min] = temp;
	  count++;
	} 
    }
  cout << "Counter is: " << count << endl; 
}

int main() {

  int array[] = {2, 5, 6, 4, 1, 3, 7};
  selectionSort(array, 7);
  for(int i = 0; i < 7; i++)
    {   
      cout << array[i] << endl;
    }
 
  return 0;
}
